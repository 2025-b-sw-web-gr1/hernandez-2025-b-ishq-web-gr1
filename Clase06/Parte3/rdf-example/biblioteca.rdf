        <foaf:givenName>Gabriel</foaf:givenName>
        <foaf:familyName>García Márquez</foaf:familyName>
        <schema:birthDate>1927-03-06</schema:birthDate>
        <schema:deathDate>2014-04-17</schema:deathDate>
        <schema:nationality>Colombiano</schema:nationality>
        <schema:award>Premio Nobel de Literatura (1982)</schema:award>
        <dc:description>Escritor, novelista, cuentista y periodista colombiano. Uno de los autores más significativos del siglo XX.</dc:description>
    </foaf:Person>

    <!-- Jorge Luis Borges -->
    <foaf:Person rdf:about="http://example.org/author/jorge-luis-borges">
        <foaf:name>Jorge Luis Borges</foaf:name>
        <foaf:givenName>Jorge Luis</foaf:givenName>
        <foaf:familyName>Borges</foaf:familyName>
        <schema:birthDate>1899-08-24</schema:birthDate>
        <schema:deathDate>1986-06-14</schema:deathDate>
        <schema:nationality>Argentino</schema:nationality>
        <dc:description>Escritor argentino, uno de los autores más destacados de la literatura del siglo XX.</dc:description>
    </foaf:Person>

    <!-- Isabel Allende -->
    <foaf:Person rdf:about="http://example.org/author/isabel-allende">
        <foaf:name>Isabel Allende</foaf:name>
        <foaf:givenName>Isabel</foaf:givenName>
        <foaf:familyName>Allende</foaf:familyName>
        <schema:birthDate>1942-08-02</schema:birthDate>
        <schema:nationality>Chilena</schema:nationality>
        <dc:description>Escritora chilena, una de las novelistas más leídas del mundo en lengua española.</dc:description>
    </foaf:Person>

    <!-- ========================================
         GÉNEROS LITERARIOS
         ======================================== -->
    
    <schema:Genre rdf:about="http://example.org/genre/realismo-magico">
        <dc:title>Realismo Mágico</dc:title>
        <dc:description>Género narrativo que combina elementos realistas con elementos fantásticos y mágicos presentados como parte de la realidad cotidiana.</dc:description>
    </schema:Genre>

    <schema:Genre rdf:about="http://example.org/genre/ficcion">
        <dc:title>Ficción</dc:title>
        <dc:description>Género literario que narra acontecimientos imaginarios o inventados.</dc:description>
    </schema:Genre>

    <schema:Genre rdf:about="http://example.org/genre/narrativa-latinoamericana">
        <dc:title>Narrativa Latinoamericana</dc:title>
        <dc:description>Conjunto de obras literarias producidas por autores de América Latina.</dc:description>
    </schema:Genre>

